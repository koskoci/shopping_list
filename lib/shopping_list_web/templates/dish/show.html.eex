<h1><%= @dish.name %></h1>

<table class="table">
  <thead>
    <tr>
      <th>Quantity</th>
      <th>Metric</th>
      <th>Ingredient</th>
      <th>Optional</th>
    </tr>
  </thead>
  <tbody>
    <%= for list_item <- @dish.items do %>
    <tr>
      <td><%= list_item.quantity %></td>
      <td><%= list_item.ingredient.metric %></td>
      <td><%= list_item.ingredient.name %></td>
      <td><%= list_item.optional %></td>
    </tr>
    <% end %>
  </tbody>
</table>
